<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_cover_video_wizard_form" model="ir.ui.view">
        <field name="name">knowledge.video.wizard.form</field>
        <field name="model">knowledge.video.wizard</field>
        <field name="arch" type="xml">
            <form string="Upload Cover Video">
                <group>
                    <field name="video_url" class="oe_edit_only"/>
                </group>
                <footer>
                    <button string="Set Cover Video" type="object" name="action_set_cover_video" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>