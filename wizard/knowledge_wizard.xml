<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_knowledge_article_cover_wizard_form" model="ir.ui.view">
        <field name="name">knowledge.wizard.form</field>
        <field name="model">knowledge.wizard</field>
        <field name="arch" type="xml">
            <form string="Upload Cover Image">
                <group>
                    <field name="cover_image" widget="image" class="oe_edit_only"/>
                </group>
                <footer>
                    <button string="Set Cover Image" type="object" name="action_set_cover_image" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>